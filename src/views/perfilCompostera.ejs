            borderColor: 'rgba(250, 129, 16, 1)', // Color del borde de las barras
            borderWidth: 2 // Ancho del borde de las barras
          }]
        },
        options: {
          responsive: true,

          maintainAspectRatio: false,
          scales: {
            y: {
              beginAtZero: true // Comienza el eje Y en cero
            }
          }
        }
      });
    }

