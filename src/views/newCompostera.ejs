                        <input hidden type="text" value="<%= name%>" class="form-control" style="font-size: 12px;"
                          name="nombre_quienEntrega" required>


                      </div>

                      <div class="mb-3">
                        <h6 for="nombreInstitucion">Código beneficiario</h6>
                        <input style="font-size: 12px;" type="text" class="form-control" name="codBenefic"
                          id="codBenefic" oninput="checkcodBenefic()" required>
                        <div id="validation-message"></div>
                      </div>
                      <div class="mb-3">
                        <h6 for="nombreInstitucion">Nombre Institución</h6>
                        <input style="font-size: 12px;" type="text" class="form-control" name="nombreInstitucion">
                      </div>
                      <div class="mb-3">
                        <h6 for="nombreResponsable">Nombre Responsable</h6>
                        <input style="font-size: 12px;" type="text" class="form-control" name="nombreResponsable">
                      </div>

                      <div class="mb-3">
                        <h6 for="celularResponsable">Celular/Contacto</h6>
                        <input id="celularInput" style="font-size: 12px;" type="text" class="form-control"
                          name="celularResponsable">
                      </div>
                      <div class="mb-3">
                        <h6 for="identificacionResponsable">Identificacion</h6>
