                          <div class="col-3">
                            <select style="font-size: 12px;" id="tipoIdentifi" class="form-control" name="tipoIdentifi"
                              style="font-size: 12px;">
                              <option value="CC" selected style="font-size: 12px;">CC</option>
                              <option value="NIT" style="font-size: 12px;">NIT</option>
                              <option value="TI" style="font-size: 12px;">TI</option>
                            </select>
                          </div>
                          <div class="col-9">
                            <input style="font-size: 12px;" type="number" class="form-control"
                              name="identificacionResponsable" required>
                          </div>
                        </div>


                      </div>
                      <div class="mb-3">
                        <h6 for="capacidadCompostera">Capacidad compostera</h6>

                        <select style="font-size: 12px;" id="capacidadCompostera" class="form-control"
                          name="capacidadCompostera" style="font-size: 12px;">
                          <option value="20" selected style="font-size: 12px;">20 kg/dia</option>
                          <option value="40" style="font-size: 12px;">40 kg/dia</option>
                          <option value="60" style="font-size: 12px;">60 kg/dia</option>
                        </select>
                      </div>



                    </div>
                    <div class="col-lg-6 col-sm-12">
                      <div class="mb-3">
                        <h6 for="direccionInstitucion">Dirección</h6>
                        <div class="row mb-3">
                          <div class="col-4">
                            <select style="font-size: 12px;" id="Ciudad" class="form-control" name="Ciudad"
                              style="font-size: 12px;">
                              <option value="Bogotá" selected style="font-size: 12px;">Bogotá</option>
                              <option value="Medellín" style="font-size: 12px;">Medellín</option>
                              <option value="Cali" style="font-size: 12px;">Cali</option>
                              <option value="Barranquilla" style="font-size: 12px;">Barranquilla</option>
                              <option value="Cartagena" style="font-size: 12px;">Cartagena</option>
                            </select>
                          </div>
                          <div class="col-4">
                            <select style="font-size: 12px;" id="Localidad" class="form-control" name="Localidad"
                              style="font-size: 12px;">
                              <option value="Localidad" selected style="font-size: 12px;">Localidad</option>
                              <option value="Usaquén" style="font-size: 12px;">Usaquén</option>
                              <option value="Chapinero" style="font-size: 12px;">Chapinero</option>
                              <option value="Santa Fe" style="font-size: 12px;">Santa Fe</option>
                              <option value="San Cristóbal" style="font-size: 12px;">San Cristóbal</option>
                              <option value="Usme" style="font-size: 12px;">Usme</option>
                              <option value="Tunjuelito" style="font-size: 12px;">Tunjuelito</option>
                              <option value="Bosa" style="font-size: 12px;">Bosa</option>
                              <option value="Kennedy" style="font-size: 12px;">Kennedy</option>
                              <option value="Fontibón" style="font-size: 12px;">Fontibón</option>
                              <option value="Engativá" style="font-size: 12px;">Engativá</option>
                              <option value="Suba" style="font-size: 12px;">Suba</option>
                              <option value="Barrios Unidos" style="font-size: 12px;">Barrios Unidos</option>
                              <option value="Teusaquillo" style="font-size: 12px;">Teusaquillo</option>
                              <option value="Los Mártires" style="font-size: 12px;">Los Mártires</option>
                              <option value="Antonio Nariño" style="font-size: 12px;">Antonio Nariño</option>
                              <option value="Puente Aranda" style="font-size: 12px;">Puente Aranda</option>
                              <option value="La Candelaria" style="font-size: 12px;">La Candelaria</option>
                              <option value="Rafael Uribe Uribe" style="font-size: 12px;">Rafael Uribe Uribe</option>
                              <option value="Ciudad Bolívar" style="font-size: 12px;">Ciudad Bolívar</option>
                              <option value="Sumapaz" style="font-size: 12px;">Sumapaz</option>
                            </select>
                          </div>
                          <div class="col-4">
                            <input style="font-size: 12px;" type="text" id="Barrio" class="form-control" name="Barrio"
                              placeholder="Barrio">
                          </div>
                        </div>

                        <input class="form-control" name="direccionInstitucion" style="font-size: 12px;" type="text"
                          id="address" placeholder="Ingresa una dirección" oninput="debouncedLocate()">
                        <div id="suggestions"></div>


                      </div>
                      <div class="mb-3">

                        <h6 for="coordenadas">Coordenadas de la ubicación</h6>
                        <div class="row">
                          <div class="col-4">
                            <input style="font-size: 12px;" value="0" type="text" id="latloguser" class="form-control"
                              name="coordenadas">
                          </div>
                          <div class="col-4">
                            <input style="font-size: 12px;" value="0" type="text" id="lat" class="form-control"
                              name="lat">
                          </div>
                          <div class="col-4">
                            <input style="font-size: 12px;" value="0" type="text" id="log" class="form-control"
                              name="log">
                          </div>
                        </div>



                        <br>
                        <div id="map"></div>


                      </div>
                      <div class="mb-3">
                        <input type="text" class="form-control" name="estado" value="INCOMPLETO" hidden>
                      </div>
                      <div class="mb-3">
                        <h6 for="email">Correo electrónico

                        </h6>
                        <input style="font-size: 12px;" type="text" class="form-control" name="email">
                      </div>
                      <div class="mb-3">
                        <h6 for="usuario">Tipo beneficiario</h6>
                        <select style="font-size: 12px;" id="notaCompostera" class="form-control" name="notaCompostera"
