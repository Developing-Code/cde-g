<body class="login">

  <%- include('./partials/nav.ejs') %>





    <div class="container" style="margin-top: 80px; ">
      <div class="row justify-content-center mt-5 ">
        <div class=" col-lg-6 col-md-12 col-sm-12">
          <div class="card">
            <div class="card-title text-center border-bottom">
              <h2 class="p-3">Descargue de compost en proceso </h2>
            </div>
            <div class="card-body">
              <form action="/descargeCompostSend" method="POST" enctype="multipart/form-data">
                <div class="container ">
                  <div class="row justify-content-evenly">
                    <div class="col-lg-12 col-sm-12">
                      <div class="mb-3">
                        <h6 for="fecha">Fecha</h6>
                        <input id="fecha" style="font-size: 12px;" type="date" class="form-control"
                          name="fecha_registro" required>
                      </div>
                      <div class="mb-3">
                        <h6 for="hora">Hora</h6>
                        <input id="hora" style="font-size: 12px;" type="time" class="form-control" name="hora_registro"
                          required>
                      </div>

                      <div class="mb-3">
                        <h6 for="usuario">Cantidad descargada</h6>
                        <div class="input-group">
                          <span class="input-group-text" id="basic-addon1">Kg</span>
                          <input style="font-size: 12px;" type="number" class="form-control" name="ctnDescargada"
                            required>
                        </div>

                      </div>
                      <div hidden class="mb-3">
                        <h6 for="usuario">Cantidad de material estructurante</h6>
                        <div class="input-group">
                          <span class="input-group-text" id="basic-addon2">Kg</span>
                          <input style="font-size: 12px;" type="text" class="form-control" value="0" name="ctnmaterialestructurante"
                            required>
                        </div>

                      </div>

                      <div class="mb-3" hidden>
                        <h6 for="usuario">Presencia de vectores</h6>
                        <select name="prevectores" class="form-control" id="">
                          <option selected value="NA"></option>
                        
                        </select>

                      </div>
                      <div class="mb-3">
                        <h6 for="usuario">Presencia de olores ofensivos </h6>
                        <select name="ausenciaolores" class="form-control" id="">
                          <option value="si">si</option>
                          <option value="no">no</option>
                        </select>
                        <input style="font-size: 12px;" type="text" class="form-control mt-3"
                          name="descrPreolores" placeholder="describa el olor" required>
                      </div>
                       <div hidden class="mb-3">
                        <h6 for="usuario">Clima</h6>
                        <select name="estClima" class="form-control" id="">
                          <option value="lluvioso">lluvioso</option>
                          <option value="Soleado">Soleado</option>
                          <option value="Nublado">Nublado</option>
                        </select>

                      </div>
                      <div hidden class="mb-3">
                        <h6 for="usuario">Coordenadas de la ubicación</h6>
                        <input style="font-size: 12px;" type="text" id="latloguser" class="form-control"
                          name="coordenadas" required>
                        <input style="font-size: 12px;" type="text" id="lat" class="form-control" name="lat" required
                          hidden>
                        <input style="font-size: 12px;" type="text" id="log" class="form-control" name="log" required
                          hidden>
                        <br>
                        <div class="marker-position" hidden>Abrir mapa</div>
                        <div hidden id="map"></div>


                      </div>
                      <div hidden class="mb-3">
                        <div class="card" style="width: 100%;">
                          <div class="card-body">

                            <div id="weatherData">
                              <!-- Aquí se mostrarán los datos meteorológicos -->
                            </div>

                          </div>
                        </div>
                        <input style="font-size: 12px;" type="text" id="temperatura" class="form-control"
                          name="temperatura" required hidden>
                        <input style="font-size: 12px;" type="text" id="humedad" class="form-control" name="humedad"
                          required hidden>
                        <input hidden type="text" value="<%= ID%>" class="form-control" style="font-size: 12px;"
                          name="id_quienRegistra" required>
                        <input hidden type="text" value="<%= name%>" class="form-control" style="font-size: 12px;"
                          name="nombre_quienRegistra" required>
                        <input hidden type="text" value="<%= idCompost%>" class="form-control" style="font-size: 12px;"
                          name="idCompost" required>

                      </div>

                    </div>
                    

                  </div>
                  <div class="row">
                    <input type="text" value="" name="id" hidden>
                    <div class="mb-3">
                      <h6 for="usuario">Foto Compost</h6>
                      <input type="file" class="form-control" name="evidencia_foto" required>
                    </div>

                  </div>
                </div>





                <div class="d-grid">
                  <button type="submit" class="btn btn-success">Continuar</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>




    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.min.js"></script>
