<body>

  <header class="headerNav">
    <nav class="navbar navbar-light bg-light fixed-top ">
      <div class="container-fluid">
        <div>

          <button class="btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling"
            aria-controls="offcanvasScrolling"><i class='bx bx-menu bx-md'></i></button>
            <a href="/home" class="navLogo"><img src="../img/logop.png" alt="" width="150px"></a>
        </div>


        <div class="offcanvas offcanvas-start" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1"
          id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
          <div class="offcanvas-header" style="background-color: #eeeeee;">
            <a href="/home" class="navLogo"><img src="../img/logop.png" alt="" width="150px" height="auto"></a>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
          </div>
          <div class="offcanvas-body">
            <ul>
              <% if ( role=='admin' || role=='user1'  || role=='supervisor' ) {%>
                <li class="text-dark p-2 m-2" style="background-color: #f4f4f4; border-radius: 15px;">
                  <a href="/home" class="nav-link text-dark"> <i class='bx  bx-home-alt-2'></i> Home</a>
                </li>
                <% } %>
                  <% if ( role=='admin') {%>
                    <li class="text-dark p-2 m-2" style="background-color: #f4f4f4; border-radius: 15px;">
                      <a href="/register" class="nav-link text-dark"> <i class='bx  bx-male'></i> Panel usuarios</a>
                    </li>




                    <% } %>
                      <li hidden class="text-dark p-2 m-2" style="background-color: #f4f4f4; border-radius: 15px;">
                        <a href="/myperfil" class="nav-link text-dark"> <i class='bx bx-user'></i> Mi perfil</a>
                      </li>

                      <li class="text-dark p-2 m-2" style="background-color: #f4f4f4; border-radius: 15px;">
                        <a href="/panelinventarios" class="nav-link text-dark"> <i class='bx bx-package'></i> Manual</a>
                      </li>


                      <li class="text-dark p-2 m-2" style="background-color: #f4f4f4; border-radius: 15px;">
                        <a href="/agregarNuevaCompostera" class="nav-link text-dark"> <i class='bx bx-package'></i> Agregar nueva compostera</a>
                      </li>


                      <li class="text-dark p-2 m-2" style="background-color: #f4f4f4; border-radius: 15px;">
                        <a href="/totalcomposteraslist"" class="nav-link text-dark"> <i class='bx bx-package'></i>Lista de cntComposteras</a>
                      </li>




                      <li class="text-dark p-2 m-2">
                        <button class="btn btn-outline-danger" type="submit">Salir <i
                            class='bx bx-log-out-circle'></i></button>
                      </li>

            </ul>
          </div>
        </div>
        
        
        <style>
          @media screen and (max-width: 1024px) {
                    .topbar-desk{
                      display: none !important;
                  }
              }
        </style>
        <ul style="display: flex;" class="topbar-desk" >
          <% if ( role=='admin' || role=='user1'  || role=='supervisor' ) {%>
            <li class="text-dark p-2 m-2" style="background-color: #f4f4f4; border-radius: 15px;">
              <a href="/home" class="nav-link text-dark"> <i class='bx  bx-home-alt-2'></i> Home</a>
            </li>
            <% } %>
              <% if ( role=='admin') {%>
                <li class="text-dark p-2 m-2" style="background-color: #f4f4f4; border-radius: 15px;">
                  <a href="/register" class="nav-link text-dark"> <i class='bx  bx-male'></i> Panel usuarios</a>
                </li>




                <% } %>
                  <li hidden class="text-dark p-2 m-2" style="background-color: #f4f4f4; border-radius: 15px;">
                    <a href="/myperfil" class="nav-link text-dark"> <i class='bx bx-user'></i> Mi perfil</a>
                  </li>

                  <li class="text-dark p-2 m-2" style="background-color: #f4f4f4; border-radius: 15px;">
                    <a href="/panelinventarios" class="nav-link text-dark"> <i class='bx bx-package'></i> Manual</a>
                  </li>

                  <li class="text-dark p-2 m-2" style="background-color: #f4f4f4; border-radius: 15px;">
                    <a href="/agregarNuevaCompostera" class="nav-link text-dark"> <i class='bx bx-package'></i> Agregar nueva compostera</a>
                  </li>

                  <li class="text-dark p-2 m-2" style="background-color: #f4f4f4; border-radius: 15px;">
                    <a href="/totalcomposteraslist"" class="nav-link text-dark"> <i class='bx bx-package'></i>Lista de cntComposteras</a>
                  </li>



        </ul>
        <div class="d-flex">
          
          <a href="/loginAut" class="btn btn-outline-danger" type="submit">Salir <i
              class='bx bx-log-out-circle'></i></a>

        </div>
